.content
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :post
    = f.text_area :post, rows: 35, class: 'tinymce'

%aside
  .field
    = f.label :subtitle
    = f.text_field :subtitle

  .field-group
    .header
      %h2 Meta Data
    .fields
      .field
        = f.label :description
        = f.text_area :description
      .field
        = f.label :author
        = f.text_field :author
  .field
    = f.submit
